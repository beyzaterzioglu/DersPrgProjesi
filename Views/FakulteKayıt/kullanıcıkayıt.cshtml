    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="/Home/Index" class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">SCS</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
        <!-- End Logo -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown">

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications"></ul>

                </li>

                <li class="nav-item dropdown">

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow messages"></ul>

                </li>

                <!-- Directly "Çıkış Yap" button -->
                <li class="nav-item dropdown pe-3">
                    <a class="dropdown-item d-flex align-items-center" href="/Home/Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span class="d-none d-md-block ps-2">Çıkış Yap</span>
                    </a>
                </li><!-- End Profile Nav -->

            </ul>
        </nav>

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link " href="/Home/Index">
                    <i class="bi bi-grid"></i>
                    <span>Anasayfa</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Sınıflar</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/Home/TablesData">
                            <i class="bi bi-circle"></i><span>Tüm Sınıflar </span>
                        </a>
                    </li>
                    @foreach (var sınıf in Model)
                    {
                        <li>
                            <a href="/Home/TablesGeneral/@sınıf.SınıfID">
                                <i class="bi bi-circle"></i><span>@sınıf.SınıfAd</span>
                            </a>
                        </li>
                    }
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/FakulteKayıt/KullanıcıKayıt">
                    <i class="bi bi-card-list"></i>
                    <span>Kullanıcı Ekle</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/BolumEkle/BolumEkle">
                    <i class="bi bi-card-list"></i>
                    <span>Bölüm Ekle</span>
                </a>
            </li>
        </ul>
    </aside><!-- End Sidebar -->

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Kullanıcı Ekleme</h1>
        </div><!-- End Page Title -->

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kayıt için gereki bilgilerini doldurunuz.</h5>

                <!-- Vertical Form -->
                @using (Html.BeginForm("FakulteKayıt", "FakulteKayıt", FormMethod.Post))
                {
                    <div class="col-12">
                        <label for="inputName" class="form-label">Fakülte/Yüksekokul Adı</label>
                        <input type="text" class="form-control" id="inputName" name="FakulteAd">
                    </div>
                    <div class="col-12">
                        <label for="inputEmail" class="form-label">Fakülte/Yüksekokul Maili</label>
                        <input type="email" class="form-control" id="inputEmail" name="FakulteMail">
                    </div>
                    <div class="col-12">
                        <label for="inputPassword" class="form-label">Fakülte/Yüksekokul Şifresi</label>
                        <input type="password" class="form-control" id="inputPassword" name="FakulteSifre">
                    </div>
                    <div class="col-12">
                        <label for="inputPasswordRepeat" class="form-label">Fakülte/Yüksekokul Şifresi Tekrar</label>
                        <input type="password" class="form-control" id="inputPasswordRepeat" name="inputPasswordRepeat">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary">Kayıt</button>
                    </div>
                }

            </div>
        </div>

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>SCS</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="https://www.linkedin.com/in/beyza-terzio%C4%9Flu-1b6a4a232/">Beyza Terzioğlu</a>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>
