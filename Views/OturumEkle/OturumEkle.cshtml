<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="/Home/Index" class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">SCS</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
        <!-- End Logo -->
        <!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown">

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications"></ul>

                </li>

                <li class="nav-item dropdown">

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow messages"></ul>

                </li>

                <!-- Directly "Çıkış Yap" button -->
                <li class="nav-item dropdown pe-3">
                    <a class="dropdown-item d-flex align-items-center" href="/Home/Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span class="d-none d-md-block ps-2">Çıkış Yap</span>
                    </a>
                </li><!-- End Profile Nav -->

            </ul>
        </nav>


    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link " href="/Home/Index">
                    <i class="bi bi-grid"></i>
                    <span>Anasayfa</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Sınıflar</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/Home/TablesData">
                            <i class="bi bi-circle"></i><span>Tüm Sınıflar </span>
                        </a>
                    </li>
                    @foreach (var sınıf in Model)
                    {
                        <li>
                            <a href="/Home/TablesGeneral/@sınıf.SınıfID">
                                <i class="bi bi-circle"></i><span>@sınıf.SınıfAd</span>
                            </a>
                        </li>
                    }
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/FakulteKayıt/KullanıcıKayıt">
                    <i class="bi bi-card-list"></i>
                    <span>Kullanıcı Ekle</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="/BolumEkle/BolumEkle">
                    <i class="bi bi-card-list"></i>
                    <span>Bölüm Ekle</span>
                </a>
            </li>
        </ul>
    </aside><!-- End Sidebar -->

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Oturum Ekleme</h1>
        </div><!-- End Page Title -->

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Oturum bilgilerini doldurunuz.</h5>

                <!-- Vertical Form -->
                @using (Html.BeginForm("OturumEkle", "OturumEkle", FormMethod.Post))
                {

                    <input type="hidden" id="SınıfID" name="SınıfID" />

                        <div class="col-12">
                            <label for="gun" class="form-label">Oturum Günü</label>
                            <select class="form-control" id="gun" name="Gun" required>
                                <option value="Monday">Pazartesi</option>
                                <option value="Tuesday">Salı</option>
                                <option value="Wednesday">Çarşamba</option>
                                <option value="Thursday">Perşembe</option>
                                <option value="Friday">Cuma</option>
                                <option value="Saturday">Cumartesi</option>
                                <option value="Sunday">Pazar</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="baslangicSaati" class="form-label">Başlangıç Saati</label>
                            <input type="time" class="form-control" id="baslangicSaati" name="BaslangicSaati" required>
                        </div>

                        <div class="col-12">
                            <label for="bitisSaati" class="form-label">Bitiş Saati</label>
                            <input type="time" class="form-control" id="bitisSaati" name="BitisSaati" required>
                        </div>
                    <div class="col-12">
                        <label for="fakulteSelect" class="form-label">Sınıf </label>
                        <select class="form-select" id="sinifSelect" name="SınıfAd">
                            <option selected>Sınıf Seçin</option>
                            <!-- Fakülte adlarını buraya ekleyecek JS kodu çalışacak -->
                        </select>
                    </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                        </div>
                   
                }

            </div>
        </div><!-- End Card Body -->

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>SCS</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="https://www.linkedin.com/in/beyza-terzio%C4%9Flu-1b6a4a232/">Beyza Terzioğlu</a>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch('https://localhost:7142/api/SinifEkle/GetSiniflar')
                .then(response => response.json())
                .then(data => {
                    const select = document.getElementById("sinifSelect");
                    const hiddenInput = document.getElementById("SınıfID"); // Gizli input alanı
                    data.forEach(sınıf => {
                        const option = document.createElement("option");
                        option.value = sınıf.sınıfAd; // Görünür metin olarak sınıf adı
                        option.textContent = sınıf.sınıfAd; // Seçilen sınıf adı
                        select.appendChild(option);
                    });

                    // Seçilen sınıf adına göre SınıfID'yi gizli inputa yerleştir
                    select.addEventListener("change", function () {
                        const selectedClass = select.value; // Seçilen sınıf adı
                        const selectedSınıf = data.find(s => s.sınıfAd === selectedClass); // Seçilen sınıfın ID'sini bul
                        if (selectedSınıf) {
                            hiddenInput.value = selectedSınıf.sınıfID; // SınıfID'yi gizli inputa yaz
                        }
                        else {
                            hiddenInput.value = ""; // Hatalı seçimde ID temizlenir
                        }
                        console.log("Hidden Input Değeri:", hiddenInput.value); // Kontrol
                    });
                })
                .catch(error => console.error("Sınıflar yüklenirken bir hata oluştu:", error));
        });
    </script>

</body>

</html>
