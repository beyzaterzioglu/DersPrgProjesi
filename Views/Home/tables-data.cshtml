<body>

    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="/Home/Index" class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">SCS</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
        <!-- End Logo -->
        <!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown">

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications"></ul>

                </li>

                <li class="nav-item dropdown">

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow messages"></ul>

                </li>

                <!-- Directly "Çıkış Yap" button -->
                <li class="nav-item dropdown pe-3">
                    <a class="dropdown-item d-flex align-items-center" href="/Home/Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span class="d-none d-md-block ps-2">Çıkış Yap</span>
                    </a>
                </li><!-- End Profile Nav -->

            </ul>
        </nav>


    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link " href="/Home/Index">
                    <i class="bi bi-grid"></i>
                    <span>Anasayfa</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Sınıflar</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/Home/TablesData">
                            <i class="bi bi-circle"></i><span>Tüm Sınıflar </span>
                        </a>
                    </li>
                    @foreach (var sınıf in Model)
                    {
                        <li>
                            <a href="/Home/TablesGeneral/@sınıf.SınıfID">
                                <i class="bi bi-circle"></i><span>@sınıf.SınıfAd</span>
                            </a>
                        </li>
                    }
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/FakulteKayıt/KullanıcıKayıt">
                    <i class="bi bi-card-list"></i>
                    <span>Kullanıcı Ekle</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/BolumEkle/BolumEkle">
                    <i class="bi bi-card-list"></i>
                    <span>Bölüm Ekle</span>
                </a>
            </li>
        </ul>
    </aside><!-- End Sidebar -->


    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Sınıflar</h1>

        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Sistemde yer alan tüm sınıflar bu sayfada listelenmektedir.</h5>
                            <div class="d-flex justify-content-between">
                                <p>Yeni sınıf eklemek için butonu kullanın.</p>
                                <button type="button" class="btn btn-outline-primary" onclick="window.location.href='/SınıfEkle/SınıfEkle'">
                                    Sınıf Ekle
                                </button>

                            </div>

                            <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                                <div class="datatable-top">
                                    <div class="datatable-dropdown">
                                        <label>
                                            <select class="datatable-selector" name="per-page"><option value="5">5</option><option value="10" selected="">10</option><option value="-1">All</option></select> Gösterilecek Sınıf Sayısı
                                        </label>
                                    </div>


                                </div>
                                <div class="datatable-container">
                                  
                                    <table class="table datatable datatable-table">
                                        <thead>
                                            <tr>
                                                <th data-sortable="true" style="width: 28.223844282238442%;">
                                                    <button class="datatable-sorter">
                                                        <b>S</b>ınıf Adı
                                                    </button>
                                                </th>
                                                @* <th data-sortable="true" style="width: 42.579075425790755%;"><button class="datatable-sorter">Yer Aldığı Blok</button></th> *@
                                                <th data-sortable="true" style="width: 29.1970802919708%;"><button class="datatable-sorter">Kapasite</button></th>
                                                <th>Sınav Kapasite</th>
                                                <th>Fakülte Adı</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sınıf in Model)
                                            {
                                                <tr>
                                                    <td>@sınıf.SınıfAd</td>
                                                    <td>@sınıf.Kapasite</td>
                                                    <td>@sınıf.SınavKapasite</td>
                                                    <td>@sınıf.Fakulte?.FakulteAd</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    
                                </div>
                                <div class="datatable-bottom">
                                    <div class="datatable-info">Showing 1 to 2 of 2 entries</div>
                                    <nav class="datatable-pagination"><ul class="datatable-pagination-list"></ul></nav>
                                </div>
                            </div>

                        </div>
                    </div>
        </section>

    </main><!-- End #main -->
